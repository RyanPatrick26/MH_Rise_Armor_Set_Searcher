<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/slot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="slot 1"
        app:srcCompat="@drawable/slot_lvl_1" />

    <ImageView
        android:id="@+id/slot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="slot 2"
        app:srcCompat="@drawable/slot_lvl_2" />

    <ImageView
        android:id="@+id/slot3"
        tools:srcCompat="@drawable/slot_lvl_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="slot 3"
        app:srcCompat="@drawable/slot_lvl_3" />
</LinearLayout>